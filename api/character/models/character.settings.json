{
  "kind": "collectionType",
  "collectionName": "characters",
  "info": {
    "name": "Character",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": false
    },
    "portrait": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "PC",
        "NPC"
      ],
      "default": "PC",
      "required": true
    },
    "player": {
      "via": "characters",
      "plugin": "users-permissions",
      "model": "user"
    },
    "raceConfig": {
      "type": "component",
      "repeatable": false,
      "component": "character-blocks.race-block",
      "required": false
    },
    "city": {
      "via": "characters",
      "model": "city"
    },
    "characterId": {
      "type": "uid",
      "required": true
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "motto": {
      "type": "string"
    },
    "activities": {
      "collection": "activity",
      "via": "characters"
    },
    "race": {
      "model": "race"
    },
    "classConfigs": {
      "type": "component",
      "repeatable": true,
      "component": "character-blocks.classes-config"
    },
    "classes": {
      "collection": "class"
    },
    "level": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "xp": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "games": {
      "via": "characters",
      "collection": "game"
    }
  }
}
