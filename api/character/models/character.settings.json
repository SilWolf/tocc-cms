{
  "kind": "collectionType",
  "collectionName": "characters",
  "info": {
    "name": "Character",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": false
    },
    "protrait": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "PC",
        "NPC"
      ],
      "default": "PC",
      "required": true
    },
    "player": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "characters"
    },
    "race": {
      "type": "component",
      "repeatable": false,
      "component": "character-blocks.race-block",
      "required": false
    },
    "city": {
      "model": "city",
      "via": "characters"
    },
    "characterId": {
      "type": "uid",
      "required": true
    }
  }
}
