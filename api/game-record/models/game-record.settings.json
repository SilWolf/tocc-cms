{
  "kind": "collectionType",
  "collectionName": "game_records",
  "info": {
    "name": "GameRecord",
    "displayName": "CIII. 劇本遊玩紀錄",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "game": {
      "model": "game"
    },
    "player": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "character": {
      "model": "character"
    },
    "xp": {
      "default": 0,
      "type": "integer"
    },
    "gp": {
      "type": "decimal",
      "default": 0
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "done"
      ],
      "default": "pending"
    },
    "description": {
      "type": "text"
    },
    "remark": {
      "type": "text"
    },
    "gameSignUp": {
      "model": "game-sign-up"
    }
  }
}
