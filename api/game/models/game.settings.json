{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "name": "game",
    "displayName": "CI. 劇本",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "code": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "startAt": {
      "type": "datetime",
      "required": true
    },
    "endAt": {
      "type": "datetime",
      "required": false
    },
    "timeLengthInMin": {
      "type": "integer"
    },
    "worldStartAt": {
      "type": "date",
      "required": true
    },
    "worldEndAt": {
      "type": "date"
    },
    "description": {
      "type": "text"
    },
    "outline": {
      "type": "json"
    },
    "lvMin": {
      "type": "integer",
      "default": 1,
      "required": true
    },
    "lvMax": {
      "type": "integer"
    },
    "capacityMin": {
      "type": "integer",
      "default": 3,
      "required": true
    },
    "capacityMax": {
      "type": "integer",
      "default": 6,
      "required": true
    },
    "tags": {
      "type": "string"
    },
    "remark": {
      "type": "text"
    },
    "dm": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "city": {
      "model": "city"
    },
    "googleCalendarEventId": {
      "type": "string",
      "private": false,
      "unique": false
    },
    "googleCalendarEventUrl": {
      "type": "string",
      "private": false
    },
    "trelloCardId": {
      "type": "string",
      "private": false
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "new",
        "draft",
        "published",
        "confirmed",
        "completed",
        "done"
      ],
      "default": "draft",
      "required": true
    },
    "publishedAt": {
      "type": "datetime"
    },
    "confirmedAt": {
      "type": "datetime"
    },
    "completedAt": {
      "type": "datetime"
    },
    "characterRewardMap": {
      "type": "json"
    }
  }
}
